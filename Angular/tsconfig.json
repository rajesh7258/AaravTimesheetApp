{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "globalize": [
          "./node_modules/globalize/dist/globalize" 
      ],
      "globalize/*": [
          "./node_modules/globalize/dist/globalize/*" 
      ],
      "cldr": [
          "./node_modules/cldrjs/dist/cldr" 
      ],
      "cldr/*": [
          "./node_modules/cldrjs/dist/cldr/*" 
      ]
    }
  }
}
